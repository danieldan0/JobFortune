@baseUrl = http://localhost:3000/api/v1
@email = jobseeker@example.com
@password = secret123

### Register job seeker
POST {{baseUrl}}/auth/email/register
Content-Type: application/json

{
  "email": "{{email}}",
  "password": "{{password}}",
  "firstName": "Jane",
  "lastName": "JobSeeker"
}

### Login job seeker
# @name jobSeekerLogin
POST {{baseUrl}}/auth/email/login
Content-Type: application/json

{
  "email": "{{email}}",
  "password": "{{password}}"
}

### Get token from response
@jobSeekerToken = {{jobSeekerLogin.response.body.token}}
@jobSeekerRefreshToken = {{jobSeekerLogin.response.body.refreshToken}}

### Create job seeker profile
POST {{baseUrl}}/job-seekers
Content-Type: application/json
Authorization: Bearer {{jobSeekerToken}}

{
  "bio": "Passionate Software Engineer with 5+ years of experience in full-stack development",
  "desiredPosition": "Senior Software Developer",
  "yearsOfExperience": 5,
  "linkedinUrl": "https://linkedin.com/in/janedoe",
  "githubUrl": "https://github.com/janedoe"
}

### Get job seeker profile
GET {{baseUrl}}/job-seekers/my-profile
Authorization: Bearer {{jobSeekerToken}}

### Update job seeker profile
PATCH {{baseUrl}}/job-seekers/1
Content-Type: application/json
Authorization: Bearer {{jobSeekerToken}}

{
  "bio": "Updated bio: Experienced Full-Stack Developer",
  "yearsOfExperience": 6,
  "desiredPosition": "Lead Software Engineer"
}

### Get all job seekers (with pagination)
GET {{baseUrl}}/job-seekers?page=1&limit=10
Authorization: Bearer {{jobSeekerToken}}

### Get specific job seeker by ID
GET {{baseUrl}}/job-seekers/1
Authorization: Bearer {{jobSeekerToken}}

### Delete job seeker profile
DELETE {{baseUrl}}/job-seekers/1
Authorization: Bearer {{jobSeekerToken}}

### Refresh token
POST {{baseUrl}}/auth/refresh
Content-Type: application/json

{
  "refreshToken": "{{jobSeekerRefreshToken}}"
}

### 12. Logout
POST {{baseUrl}}/auth/logout
Authorization: Bearer {{jobSeekerToken}}
